<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/btnDate"
        android:layout_above="@+id/btnTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="388dp"
        android:layout_marginStart="388dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="420dp"
        android:layout_marginEnd="420dp"
        android:textColor="#ff000000"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/btnTime"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnDate"
        android:layout_alignEnd="@+id/btnDate"
        android:layout_alignLeft="@+id/btnDate"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBeef"
        android:layout_marginTop="117dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/beef"
        android:layout_above="@+id/btnDate"
        android:layout_marginBottom="247dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnTime"
        android:layout_toStartOf="@+id/btnTime"
        android:layout_alignParentTop="true"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChicken"
        android:layout_alignTop="@+id/btnBeef"
        android:background="@drawable/chicken"
        android:layout_marginRight="193dp"
        android:layout_marginEnd="193dp"
        android:layout_alignRight="@+id/btnDate"
        android:layout_alignEnd="@+id/btnDate"
        android:layout_alignBottom="@+id/btnBeef"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="362dp"
        android:layout_marginStart="362dp"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNoodle"
        android:background="@drawable/noodle"
        android:layout_alignTop="@+id/btnChicken"
        android:layout_marginRight="291dp"
        android:layout_marginEnd="291dp"
        android:layout_marginLeft="314dp"
        android:layout_marginStart="314dp"
        android:layout_alignBottom="@+id/btnBeef"
        android:layout_alignRight="@+id/btnSweet"
        android:layout_alignEnd="@+id/btnSweet"
        android:layout_alignLeft="@+id/btnDate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSweet"
        android:layout_alignTop="@+id/btnNoodle"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/sweet"
        android:layout_alignBottom="@+id/btnNoodle"
        android:layout_toRightOf="@+id/btnTime"
        android:layout_marginLeft="113dp"
        android:layout_marginStart="113dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick an item. Each plate is $12 and comes with an egg roll and iced tea."
        android:id="@+id/textView"
        android:layout_above="@+id/btnChicken"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDate"
        android:layout_below="@+id/btnChicken"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTime"
        android:layout_below="@+id/txtDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="23sp" />


</RelativeLayout>